<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardCornerRadius="@dimen/dimen_5dp"
    app:cardElevation="@dimen/dimen_0dp"
    app:cardMaxElevation="@dimen/dimen_0dp"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/alert_dark"
        android:paddingLeft="@dimen/dimen_20dp"
        android:paddingTop="@dimen/dimen_20dp"
        android:paddingRight="@dimen/dimen_20dp"
        android:paddingBottom="@dimen/dimen_20dp">

       <LinearLayout
           android:id="@+id/ll_email"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginTop="@dimen/dimen_15dp">
           <EditText
               android:id="@+id/et_email"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="@dimen/dimen_20dp"
               android:backgroundTint="@android:color/transparent"
               android:hint="@string/enter_email_address"
               android:inputType="textEmailAddress"
               android:textColor="@color/whiteThree"
               android:textColorHint="@color/coolGrey"
               android:textSize="@dimen/text_large"
               android:textStyle="bold"/>

           <View
               android:layout_width="match_parent"
               android:layout_height="@dimen/dimen_1dp"
               android:layout_marginTop="@dimen/negative_15dp"
               android:background="@color/whiteThree" />
       </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_email"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dimen_23dp"
            android:gravity="end">

            <com.happi.android.customviews.TypefacedTextViewRegular
                android:id="@+id/tv_negative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Cancel"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_regular_medium" />

            <com.happi.android.customviews.TypefacedTextViewRegular
                android:id="@+id/tv_positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_35dp"
                android:layout_toRightOf="@+id/tv_negative"
                android:gravity="start"
                android:text="Ok"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_regular_medium" />


        </RelativeLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>