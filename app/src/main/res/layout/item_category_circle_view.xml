<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layout_marginEnd="@dimen/dimen_7dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_category"
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="@dimen/dimen_100dp"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="@dimen/dimen_2dp"
        android:src="@drawable/ic_placeholder" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="@dimen/dimen_100dp"
        android:src="@drawable/vignette" />
    <com.happi.android.customviews.TypefacedTextViewSemiBold
        android:id="@+id/tv_category_title"
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="@dimen/dimen_100dp"
        android:ellipsize="end"
        android:lines="1"
        android:gravity="center"
        android:textColor="@color/white"
        android:text=""
        android:textSize="@dimen/text_regular_medium1"
        android:paddingStart="@dimen/dimen_2dp"
        android:paddingEnd="@dimen/dimen_2dp"
        android:layout_gravity="center_vertical"/>

</FrameLayout>