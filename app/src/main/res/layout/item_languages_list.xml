<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="193dp"
    android:layout_marginTop="@dimen/dimen_7dp"
    android:layout_marginRight="@dimen/dimen_7dp"
    android:background="?android:attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="@dimen/dimen_128dp"
        android:layout_height="@dimen/dimen_165dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:cardCornerRadius="@dimen/dimen_5dp"
            app:cardElevation="@dimen/dimen_0dp"
            app:cardMaxElevation="@dimen/dimen_0dp"
            app:cardUseCompatPadding="false">

            <FrameLayout
                android:id="@+id/ll_main_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_placeholder" />

                <ImageView
                    android:id="@+id/iv_tick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tick"
                    android:visibility="invisible" />

            </FrameLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.happi.android.customviews.TypefacedTextViewRegular
        android:id="@+id/tv_category_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_28dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:padding="@dimen/dimen_5dp"
        android:text="@string/searchKeyword"
        android:textSize="@dimen/text_small_medium1" />

</LinearLayout>