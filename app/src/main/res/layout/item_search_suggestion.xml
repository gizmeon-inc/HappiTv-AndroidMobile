<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_48dp"
    android:padding="@dimen/dimen_5dp">

    <ImageView
        android:id="@+id/iv_history"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_history_white"
        android:tint="@color/error_tint" />

    <com.happi.android.customviews.TypefacedTextViewRegular
        android:id="@+id/tv_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_toRightOf="@id/iv_history"
        android:text="Search String"
        android:textColor="@color/error_tint"
        android:textSize="@dimen/text_regular_medium" />

    <ImageView
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_forward"
        android:tint="@color/error_tint" />

</RelativeLayout>