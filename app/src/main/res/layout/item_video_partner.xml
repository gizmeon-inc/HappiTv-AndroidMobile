<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_show_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dimen_7dp"
    android:orientation="horizontal"
    app:cardCornerRadius="@dimen/dimen_3dp"
    app:cardElevation="@dimen/dimen_0dp"
    app:cardMaxElevation="@dimen/dimen_0dp"
    app:cardUseCompatPadding="false">

    <FrameLayout
        android:id="@+id/ll_main_layout"
        android:layout_width="@dimen/dimen_128dp"
        android:layout_height="@dimen/dimen_165dp">

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_placeholder"
            android:contentDescription="@string/image_label"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/vignette"
            android:contentDescription="@string/image_label"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.happi.android.customviews.TypefacedTextViewSemiBold
                android:id="@+id/tv_video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/searchKeyword"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_small_medium1"
                android:background="@color/dark_overlay"
                android:paddingTop="@dimen/dimen_2dp"/>

        </RelativeLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>