<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_7dp"
    android:id="@+id/ll_subs"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_5dp">
        <com.happi.android.customviews.TypefacedTextViewBold
            android:id="@+id/tv_subs_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_regular_medium"
            android:textColor="@color/whiteThree"/>
        <com.happi.android.customviews.TypefacedTextViewBold
            android:id="@+id/tv_subs_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:text=""
            android:textSize="@dimen/text_regular_medium"
            android:textColor="@color/whiteThree"/>
        <com.happi.android.customviews.TypefacedTextViewBold
            android:id="@+id/tv_subs_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:text=""
            android:textSize="@dimen/text_regular_medium"
            android:textColor="@color/whiteThree"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_5dp">
        <com.happi.android.customviews.TypefacedTextViewRegular
            android:id="@+id/tv_subs_valid_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:textColor="@color/whiteThree"/>

    </LinearLayout>
    <View
        android:id="@+id/vw_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginTop="4dp"
        android:background="@color/coolGrey" />
</LinearLayout>