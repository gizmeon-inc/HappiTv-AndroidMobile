<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen_3dp"
    app:cardElevation="@dimen/dimen_0dp"
    app:cardMaxElevation="@dimen/dimen_0dp"
    app:cardUseCompatPadding="true"
    app:layout_goneMarginBottom="@dimen/dimen_5dp">
    <LinearLayout
        android:id="@+id/ll_schedule_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="@color/dark_black"
        android:paddingTop="@dimen/dimen_5dp"
        android:baselineAligned="false">
        <LinearLayout
            android:id="@+id/ll_schedule_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_80dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dimen_5dp"
            android:paddingBottom="@dimen/dimen_5dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/dimen_3dp"
                app:cardElevation="@dimen/dimen_0dp"
                app:cardMaxElevation="@dimen/dimen_0dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                app:cardBackgroundColor="@color/dark_black">
                <ImageView
                    android:id="@+id/iv_schedule_image"
                    android:layout_width = "match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitStart"
                    android:padding="@dimen/dimen_1dp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_schedule_details"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_70dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingEnd="@dimen/dimen_3dp"
            android:paddingStart="@dimen/dimen_3dp"
            android:weightSum="3">
            <com.happi.android.customviews.TypefacedTextViewRegular
                android:id="@+id/tv_schedule_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:textColor="@color/whiteThree"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="top"
                android:layout_weight="1.2"/>
            <com.happi.android.customviews.TypefacedTextViewBold
                android:id="@+id/tv_schedule_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_15dp"
                android:gravity="top"
                android:layout_weight="1.2"/>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>