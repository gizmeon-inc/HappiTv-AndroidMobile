<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_show_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/dark_black"
    android:orientation="horizontal"
    app:cardCornerRadius="@dimen/dimen_0dp"
    app:cardElevation="@dimen/dimen_0dp"
    app:cardMaxElevation="@dimen/dimen_0dp"
    app:cardUseCompatPadding="false"
    android:layout_marginBottom="@dimen/dimen_5dp"
    app:cardBackgroundColor="@color/dark_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/fl_main_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_165dp">

            <ImageView
                android:id="@+id/iv_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_placeholder"
                android:contentDescription="@string/image_label"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/vignette"
                android:contentDescription="@string/image_label"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_video_name_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_video_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small_medium"
                android:maxLines="2"
                android:minLines="2"
                android:ellipsize="end"
                android:gravity="start|top"
                android:paddingStart="@dimen/dimen_2dp"
                android:paddingEnd="@dimen/dimen_2dp"/>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>