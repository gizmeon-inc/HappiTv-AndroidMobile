<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@android:color/transparent"
    android:gravity="center">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cv_category"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_gravity="center"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="@dimen/dimen_2dp"
            android:src="@drawable/ic_placeholder"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_gravity="center"
            android:src="@drawable/vignette" />
        <com.happi.android.customviews.TypefacedTextViewSemiBold
            android:id="@+id/tv_category_title"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center"
            android:lines="1"
            android:textColor="@color/white"
            android:text=""
            android:textSize="@dimen/text_regular_medium1"
            android:paddingStart="@dimen/dimen_2dp"
            android:paddingEnd="@dimen/dimen_2dp" />
    </FrameLayout>
</RelativeLayout>