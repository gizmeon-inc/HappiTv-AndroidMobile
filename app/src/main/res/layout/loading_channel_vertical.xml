<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dimen_0dp"
    app:cardCornerRadius="5dp"
    app:cardMaxElevation="@dimen/dimen_0dp"
    app:cardUseCompatPadding="false">

    <FrameLayout
        android:id="@+id/ll_main_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_165dp"
        android:background="@color/white">

        <View
            android:id="@+id/iv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_transparent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_165dp"
            android:padding="@dimen/dimen_15dp">

            <View
                android:id="@+id/tv_video_tag"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@color/light_transparent"
                android:gravity="center"
                android:padding="@dimen/dimen_2dp"
                android:text="@string/genere" />

            <View
                android:id="@+id/tv_img1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_below="@id/tv_video_tag"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:background="@color/light_transparent" />

            <View
                android:id="@+id/tv_img2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_img1"
                android:layout_marginRight="60dp"
                android:background="@color/light_transparent" />

            <View
                android:id="@+id/tv_duration"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_img1"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:background="@color/light_transparent" />

        </RelativeLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>