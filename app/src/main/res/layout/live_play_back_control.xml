<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical">
    <!--android:background="#CC000000"-->
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:gravity="top"
            android:weightSum="2"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dimen_10dp">


            <com.happi.android.customviews.TypefacedTextViewBold
                android:id="@+id/tv_channel_title_live"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/text_regular_medium3"
                android:layout_gravity="top|start"
                android:gravity="start"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:singleLine="true" />
            <!--<ImageButton
                android:id="@id/exo_prev"
                style="@style/ExoMediaButton.Previous"
                android:visibility="gone" />

            <ImageButton
                android:id="@id/exo_rew"
                style="@style/ExoMediaButton.Rewind"
                android:visibility="gone" />

            <ImageButton
                android:id="@id/exo_repeat_toggle"
                style="@style/ExoMediaButton"
                android:visibility="gone" />-->

            <!-- <ImageButton
                 android:id="@id/exo_play"
                 style="@style/ExoMediaButton.Play"
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 android:background="@drawable/ic_player_play_pause_bg" />-->

            <!-- <ImageButton
                 android:id="@id/exo_pause"
                 style="@style/ExoMediaButton.Pause"
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 android:background="@drawable/ic_player_play_pause_bg" />-->

            <!--<ImageButton
                android:id="@id/exo_ffwd"
                style="@style/ExoMediaButton.FastForward"
                android:visibility="gone" />

            <ImageButton
                android:id="@id/exo_next"
                style="@style/ExoMediaButton.Next"
                android:visibility="gone" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.happi.android.customviews.TypefacedTextViewBold
                android:id="@+id/tv_live_tag"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_width="@dimen/dimen_player_50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/live_tag_bg"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_5dp"
                android:paddingRight="@dimen/dimen_5dp"
                android:text="@string/live_label"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small_medium2" />




            <com.google.android.exoplayer2.ui.DefaultTimeBar
                android:id="@id/exo_progress"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_player_15dp"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_weight="1"
                android:focusable="false"
                android:background="@drawable/player_translucent_bg"
                app:buffered_color="#80FFFFFF"
                app:played_color="#b0ff00"
                app:scrubber_color="@color/white"
                app:unplayed_color="#00000000" />



            <FrameLayout
                android:id="@+id/exo_fullscreen_button"
                android:layout_width="@dimen/dimen_player_35dp"
                android:layout_height="@dimen/dimen_player_35dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:background="@drawable/player_translucent_bg">

                <ImageView
                    android:id="@+id/exo_fullscreen_icon"
                    android:layout_width="@dimen/dimen_player_18dp"
                    android:layout_height="@dimen/dimen_player_18dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_fullscreen_white" />

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
         <ImageButton
                android:id="@id/exo_play"
                style="@style/ExoMediaButton.Play"
                android:layout_width="@dimen/dimen_player_72dp"
                android:layout_height="@dimen/dimen_player_72dp"
             android:background="@drawable/ic_player_play_pause_bg"/>

         <ImageButton
             android:id="@id/exo_pause"
             style="@style/ExoMediaButton.Pause"
             android:layout_width="@dimen/dimen_player_72dp"
             android:layout_height="@dimen/dimen_player_72dp"
             android:background="@drawable/ic_player_play_pause_bg" />

    </LinearLayout>
</FrameLayout>


</LinearLayout>