<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/dimen_8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen_3dp"
    app:cardElevation="@dimen/dimen_0dp"
    app:cardMaxElevation="@dimen/dimen_0dp"
    app:cardUseCompatPadding="true"
    app:layout_goneMarginBottom="@dimen/dimen_5dp">
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_8dp"
        android:background="@color/schedule_grey">
        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dimen_5dp">
            <RelativeLayout
                android:id="@+id/ll_reminder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_5dp">

                <com.happi.android.customviews.TypefacedTextViewBold
                    android:id="@+id/tv_remind_me_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_2dp"
                    android:text="Remind Me"
                    android:textSize="@dimen/dimen_15dp"
                    android:textColor="@color/colorPrimaryDark"/>

                <com.suke.widget.SwitchButton
                    android:id="@+id/sw_schedule"
                    android:layout_width="@dimen/dimen_50dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_alignParentEnd="true"
                    app:sb_show_indicator="false"
                    app:sb_shadow_color="@color/colorPrimaryDark"
                    app:sb_checked_color="@color/colorPrimaryDark"
                    app:sb_checkline_color="@color/colorPrimaryDark"
                    app:sb_uncheckcircle_color="@color/colorPrimaryDark"
                    app:sb_uncheck_color="@color/colorPrimaryDark"
                    app:sb_background="@android:color/transparent"
                    android:layout_alignEnd="@id/tv_remind_me_label"/>

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <LinearLayout
                android:id="@+id/ll_5"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dimen_5dp">
                <ImageView
                    android:id="@+id/iv_schedule_item_logo"
                    android:layout_width = "match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:padding="@dimen/dimen_1dp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_4"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_70dp"
                android:orientation="vertical"
                android:layout_weight="3"
                android:paddingRight="@dimen/dimen_3dp">
                <com.happi.android.customviews.TypefacedTextViewBold
                    android:id="@+id/tv_video_title_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cliff Hanger"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_15dp"/>
                <com.happi.android.customviews.TypefacedTextViewRegular
                    android:id="@+id/iv_time_schedule_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7:29 PM"
                    android:textColor="@color/whiteThree"
                    android:layout_marginTop="@dimen/dimen_5dp"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>