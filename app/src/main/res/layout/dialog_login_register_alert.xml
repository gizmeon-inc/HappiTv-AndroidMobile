<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardCornerRadius="@dimen/dimen_5dp"
    app:cardElevation="@dimen/dimen_0dp"
    app:cardMaxElevation="@dimen/dimen_0dp"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/alert_dark"
        android:paddingLeft="@dimen/dimen_20dp"
        android:paddingTop="@dimen/dimen_20dp"
        android:paddingRight="@dimen/dimen_20dp"
        android:paddingBottom="@dimen/dimen_20dp">


        <com.happi.android.customviews.TypefacedTextViewRegular
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:gravity="start"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_regular_medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_msg"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dimen_23dp"
            android:gravity="end">

            <com.happi.android.customviews.TypefacedTextViewRegular
                android:id="@+id/tv_negative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_15dp"
                android:text=""
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_regular_medium" />


            <com.happi.android.customviews.TypefacedTextViewRegular
                android:id="@+id/tv_neutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_15dp"
                android:layout_toEndOf="@+id/tv_negative"
                android:gravity="start"
                android:text=""
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_regular_medium" />


        </RelativeLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>