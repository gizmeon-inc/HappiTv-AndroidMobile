<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btm_nav"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:fitsSystemWindows="true">




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dimen_20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_32dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="210dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_toolbar_logo"
            android:contentDescription="@string/image_label"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_50dp"
        android:layout_marginRight="@dimen/dimen_50dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:backgroundTint="@android:color/transparent"
            android:hint="@string/email_address"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/coolGrey"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="-15dp"
            android:background="@color/whiteThree" />

       <!-- <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@android:color/transparent"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColorHint="@color/coolGrey"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tl_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/white"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            app:boxBackgroundMode="outline"
            android:hint="@string/password"
            app:hintTextColor="@color/coolGrey"
            app:errorTextColor="@color/darkRed">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@android:color/transparent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="5dp"
            android:background="@color/whiteThree" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_20dp">

        <Button
            android:id="@+id/bt_login"
            android:layout_width="270dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_regular_medium3" />

        <com.happi.android.customviews.TypefacedTextViewRegular
            android:id="@+id/tv_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_login"
            android:layout_alignRight="@id/bt_login"
            android:padding="@dimen/dimen_5dp"
            android:background="?selectableItemBackground"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text="@string/forgot_password"
            android:textSize="@dimen/text_regular_medium1"
            android:textColor="@color/whiteThree"/>


        <LinearLayout
            android:id="@+id/ll_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_forgot_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:orientation="horizontal">

            <com.happi.android.customviews.TypefacedTextViewRegular
                android:id="@+id/new_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/new_to_hypber"
                android:textSize="@dimen/text_regular_medium1"
                android:textColor="@color/whiteThree"/>


            <com.happi.android.customviews.TypefacedTextViewRegular
                android:id="@+id/tv_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_5dp"
                android:gravity="center_horizontal"
                android:text="@string/signup"
                android:singleLine="true"
                android:maxLines="1"
                android:background="?selectableItemBackground"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_regular_medium1" />
        </LinearLayout>

        <com.happi.android.customviews.TypefacedTextViewRegular
            android:id="@+id/tv_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_signup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:padding="@dimen/dimen_5dp"
            android:text="@string/skip_login"
            android:visibility="visible"
            android:textColor="@color/whiteThree"
            android:background="?selectableItemBackground"
            android:textSize="@dimen/text_regular_medium1" />
    </RelativeLayout>
</LinearLayout>
<RelativeLayout
    android:id="@+id/rl_otp_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_otp_verification"/>

</RelativeLayout>
</RelativeLayout>